<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.AppView" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sams_club_dark_blue</item>
        <item name="colorPrimaryVariant">@color/sams_club_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sams_club_light_blue</item>
        <item name="colorSecondaryVariant">@color/sams_club_light_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/sams_club_dark_blue</item>
    </style>

    <!-- Theme of the app for light mode. -->
    <style name="Theme.AppView.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sams_club_dark_blue</item>
        <item name="colorPrimaryVariant">@color/sams_club_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sams_club_light_blue</item>
        <item name="colorSecondaryVariant">@color/sams_club_light_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/sams_club_dark_blue</item>
    </style>

    <!-- Theme of the app for dark mode. -->
    <style name="Theme.AppView.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sams_club_dark_blue</item>
        <item name="colorPrimaryVariant">@color/sams_club_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sams_club_light_blue</item>
        <item name="colorSecondaryVariant">@color/sams_club_light_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/sams_club_dark_blue</item>
    </style>

</resources>